{
  "hosting": {
    "site": "distro-phl-dev",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080,
      "rules": {
        "rules": "test/firestore/firestore.rules",
        "indexes": "test/firestore/firestore.indexes.json"
      }
    }
  }
}
